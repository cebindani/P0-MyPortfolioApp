<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cebin.myappportfolio.MainActivity"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:padding="8dp"
        android:text="My Nanodegree Apps!"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/button_popular_movies"
        android:layout_width="220dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
        android:onClick="showToast"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Popular Movies"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="HardcodedText"
        tools:layout_constraintTop_creator="1"

        android:textSize="14sp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button_stock_hawk"
        android:layout_width="220dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
        android:onClick="showToast"
        android:text="Stock Hawk"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_popular_movies"
        tools:layout_constraintTop_creator="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="14sp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button_build_it_bigger"
        android:layout_width="220dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
        android:onClick="showToast"
        android:text="Build It Bigger"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_stock_hawk"
        tools:layout_constraintTop_creator="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="14sp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button_make_material"
        android:layout_width="220dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
        android:onClick="showToast"
        android:paddingLeft="16dp"
        android:text="Make your app Material"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_build_it_bigger"
        tools:layout_constraintTop_creator="1"
        android:paddingRight="16dp"
        android:textSize="14sp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button_go_ubiquitous"
        android:layout_width="220dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
        android:onClick="showToast"
        android:text="Go Ubiquitous"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_make_material"
        tools:layout_constraintTop_creator="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="14sp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button_capstone"
        android:layout_width="220dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
        android:onClick="showToast"
        android:text="Capstone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_go_ubiquitous"
        tools:layout_constraintTop_creator="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="14sp"
        android:textColor="@android:color/white" />
</android.support.constraint.ConstraintLayout>
